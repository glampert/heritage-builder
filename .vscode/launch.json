{
    // Install extensions:
    // - rust-analyzer
    // - CodeLLDB
    //
    // * Add launch args as needed to "args[]" array.

    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'HeritageBuilder'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=HeritageBuilder",
                    "--package=HeritageBuilder"
                ],
                "filter": {
                    "name": "HeritageBuilder",
                    "kind": "bin"
                }
            },
            "args": [
                // "user_arg1",
                // "user_arg2"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'HeritageBuilder'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=HeritageBuilder",
                    "--package=HeritageBuilder"
                ],
                "filter": {
                    "name": "HeritageBuilder",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
