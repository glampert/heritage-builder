/*
| Task   | Command        | Keybinding        |
| ------ | -------------- | ----------------- |
| Build  | `cargo build`  | `Shift + Cmd + B` |
| Test   | `cargo test`   | `Shift + Cmd + T` |
| Check  | `cargo check`  | `Ctrl  + Cmd + C` |
| Clippy | `cargo clippy` | `Shift + Cmd + L` |
| Format | `cargo fmt`    | `Shift + Alt + F` |
See: keybindings.json
*/
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "label": "rust: cargo build",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "cargo",
      "command": "test",
      "label": "rust: cargo test",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "cargo",
      "command": "check",
      "label": "rust: cargo check",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "cargo",
      "command": "clippy",
      "label": "rust: cargo clippy",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      // Use nightly rustfmt (more formatting options than stable).
      "label": "Rustfmt Nightly (current file)",
      "type": "shell",
      "command": "rustfmt",
      // Format only the currently selected file (skip-children):
      "args": ["+nightly", "--unstable-features", "--skip-children", "${file}"],
      "problemMatcher": []
    }
  ]
}
